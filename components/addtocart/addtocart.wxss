@import "../../app.wxss";

.comm-stand {
    margin: 55rpx;
    background: #fff;
    border-radius: 16rpx;
    position: fixed;
    z-index: 99;
    top: 15%;
    left: 0;
    right: 0;
}

.comm-stand-con {
    padding: 32rpx 32rpx 0 32rpx;
    position: relative;
    overflow: hidden;
}

.comm-stand .comm-item {
    overflow: hidden;
    margin-bottom: 12rpx;
    line-height: 40rpx;
    clear: both;
}

.comm-attr {
    overflow: hidden;
}

.comm-stand .comm-name {
    font-size: 32rpx;
    line-height: 40rpx;
    padding-bottom: 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.comm-stand .comm-name .comm-txt {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 453rpx;
}

.comm-stand .comm-bd {
    max-height: 474rpx;
    overflow-y: auto;
    margin: 0 -24rpx;
    padding: 24rpx 24rpx 0;
}

.comm-stand .comm-icon {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 32rpx;
    right: 28rpx;
    color: #bdbdbd;
}

.comm-stand .comm-icon image {
    width: 40rpx;
    height: 40rpx;
}

.comm-item .comm-title {
    font-size: 28rpx;
    line-height: 44rpx;
    margin-bottom: 12rpx;
}

.comm-item .comm-attr view {
    font-size: 24rpx;
    line-height: 60rpx;
    border: 2rpx solid #eee;
    background: #eee;
    color: #515151;
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    border-radius: 34rpx;
    padding: 0 24rpx;
    margin: 16rpx 16rpx 0 0;
    box-sizing: border-box;
}

.comm-item .comm-attr view.active {
    background: transparent;
    border-color: #ff221a;
    color: #ff221a;
}

.comm-item .comm-attr view.disabled {
    opacity: 0.5;
    color: #999;
    background: #f5f5f5;
    border-color: #f5f5f5;
}

.comm-stand-shop {
    background: #f7f7f7;
    overflow: hidden;
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
}

.comm-stand-shop .product-into {
    margin: 24rpx 32rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #ff221a;
}

.comm-stand-shop .product-into .product-price {
    color: #ff221a;
    font-size: 36rpx;
    width: 200rpx;
    float: left;
    line-height: 60rpx;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 98;
    bottom: 0;
    right: 0;
    background-color: rgba(0,0,0,0.4);
}

.product-shop .choose-btn {
    float: right;
    padding: 0 24rpx;
    background: #ff221a;
    color: #fff;
    font-size: 28rpx;
    border-radius: 32rpx;
}

.product-shop .choose-btn .iconfont {
    font-size: 28rpx;
    margin-right: 8rpx;
}

.product-shop {
    float: right;
    position: relative;
}

.product-shop .icon-plus {
    font-size: 48rpx;
}

.product-buy {
    overflow: hidden;
    text-align: center;
    width: 160rpx;
}

.product-buy .l,.product-buy .r {
    float: left;
    color: #ff221a;
    line-height: 60rpx;
}

.product-buy .m {
    width: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 32rpx;
    float: left;
    color: black;
}

.product-buy input.m {
    font-size: 36rpx;
}

.product-buy .r {
    float: right;
}