@import "../../app.wxss";

.search-titles {
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 3;
}

.search {
    padding: 0 24rpx 24rpx;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 8;
}

.search input {
    border: 0;
    border-radius: 8rpx;
    height: 64rpx;
    line-height: 64rpx;
    background: #F3F3F3;
    padding-left: 68rpx;
}

.search .iconfont {
    position: absolute;
    color: #bdbdbd;
    left: 40rpx;
    top: 10rpx;
    font-size: 40rpx;
}

.search-container {
    font-size: 24rpx;
    padding-left: 190rpx;
}

.search-container .container-l {
    width: 176rpx;
    float: left;
    position: fixed;
    top: 86rpx;
    left: 0;
    bottom: 0;
    background: #fff;
    overflow-y: auto;
    z-index: 2;
}

.categroy {
    padding: 24rpx 16rpx;
    text-align: center;
    font-size: 24rpx;
}

.categroy view {
    line-height: 48rpx;
    padding: 0 8rpx;
    color: #212121;
    border-radius: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: inline-block;
    min-width: 128rpx;
    max-width: 100%;
    box-sizing: border-box;
}

.categroy.active view {
    background: #FF5722;
    color: #fff;
}

.container-r-title {
    position: fixed;
    top: 86rpx;
    right: 0;
    left: 178rpx;
    background: #fff;
    z-index: 5;
    width: 572rpx;
    padding-top: 4rpx;
}

.container-r-title-table {
    white-space: nowrap;
}

.container-r-title-table view {
    line-height: 32rpx;
    padding: 24rpx 0;
    margin-right: 24rpx;
    display: inline-block;
    position: relative;
    z-index: 2;
}

.container-r-title-table view:first-child {
    margin-left: 24rpx;
}

.container-r-title-table view:last-child {
    margin-right: 48rpx;
}

.container-r-title-table view.active {
    color: #FF5722;
}

.container-r-title-table view text {
    position: absolute;
    bottom: 0;
    height: 4rpx;
    left: 50%;
    width: 48rpx;
    margin-left: -24rpx;
    background: #FF5722;
    display: none;
}

.container-r-title-table view.active text {
    display: block;
}

.table-headersort {
    font-size: 28rpx;
    padding: 24rpx 0 24rpx 24rpx;
    overflow: hidden;
}

.table-headersort .active {
    color: #ff7043;
}

.table-headersort-title {
    width: 33%;
    float: left;
}

.table-headersort-title .bd {
    width: 148rpx;
    margin: 0 auto;
    line-height: 40rpx;
    overflow: hidden;
}

.table-headersort-title .tit,.table-headersort-title .term {
    float: left;
}

.table-headersort-title .term {
    margin-top: 12rpx;
    margin-left: 10rpx;
}

.term .active {
    border-bottom: 8rpx solid #ff7043;
}

.triangle-up {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-bottom: 8rpx solid #333;
    margin-bottom: 2rpx;
}

.triangle-up-active {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-bottom: 8rpx solid #ff7043;
    margin-bottom: 2rpx;
}

.triangle-down {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 8rpx solid #333;
}

.triangle-down-active {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 8rpx solid #ff7043;
}

.triangle-down-sub {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 8rpx solid #939393;
}

.table-subcategory {
    overflow: hidden;
    padding: 12rpx 0rpx;
    margin-left: 24rpx;
    font-size: 24rpx;
    color: #212121;
}

.table-subcategory view {
    display: inline-block;
    background: #f5f5f5;
    border: 1px solid #e0e0e0;
    border-radius: 6rpx;
    height: 54rpx;
    line-height: 54rpx;
    margin-right: 14rpx;
    width: 152rpx;
    text-align: center;
    overflow: hidden;
    margin-top: 12rpx;
    margin-bottom: 12rpx;
}

.table-subcategory .all {
    margin: 0rpx auto;
    border: none;
    width: 152rpx;
    text-align: center;
    position: relative;
    left: 35%;
    background: #fff;
}

.table-subcategory .all .triangle-down-sub {
    position: absolute;
    vertical-align: middle;
    top: 23rpx;
}

.table-subcategory .subcategory-active {
    background: #fbe9e7;
    border: 1rpx solid #fe5722;
    border-radius: 6rpx;
}

.pro-comm-area {
    overflow: hidden;
    width: 750rpx;
}

.pro-comm-l {
    width: 214rpx;
    float: left;
}

.pro-comm-r {
    width: 550rpx;
    float: right;
    padding-bottom: 32rpx;
}

.pro-comm-t {
    height: 170rpx;
}

.search-pro {
    overflow: hidden;
    margin-top: 32rpx;
}

.pro-list .search-pro-pic {
    width: 128rpx;
    height: 128rpx;
    overflow: hidden;
    float: left;
}

.pro-list .search-pro-pic image {
    width: 100%;
    height: 100%;
}

.pro-list .search-pro-txt {
    float: left;
    margin-left: 16rpx;
    width: 382rpx;
    font-size: 28rpx;
}

.search-pro-txt .search-pro-txt-name {
    line-height: 32rpx;
    height: 64rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 24rpx;
}

.search-rpo-txt-price {
    margin-top: 18rpx;
    font-size: 32rpx;
    color: #212121;
    position: relative;
}

.search-rpo-txt-price .search-pro-shop {
    float: right;
    position: absolute;
    top: 0;
    right: 0;
    background: #fff;
}

.search-rpo-txt-price .saleprice {
    white-space: nowrap;
    line-height: 40rpx;
    font-size: 26rpx;
}

.search-rpo-txt-price .sell text {
    font-weight: 600;
    font-size: 30rpx;
}

.search-pro-shop .iconfont {
    font-size: 44rpx;
    color: #FF5722;
    line-height: 44rpx;
}

.search-pro-shop .buy-num {
    width: 44rpx;
    position: relative;
    text-align: center;
    line-height: 44rpx;
    height: 44rpx;
    color: #212121;
    background: #fff;
    font-size: 32rpx;
    box-sizing: border-box;
}

.search-pro-shop .buy-num .iconfont {
    position: absolute;
    top: 0;
}

.search-pro-shop .buy-num .icon-minus {
    left: 0;
}

.search-pro-shop .buy-num .icon-plus {
    right: 0;
}

.search-pro-shop .iconfont .num {
    min-width: 28rpx;
    padding: 0 8rpx;
    line-height: 28rpx;
    text-align: center;
    border-radius: 28rpx;
    background: #fff;
    font-size: 20rpx;
    position: absolute;
    right: -12rpx;
    top: -12rpx;
    color: #fff;
    background: #ff221a;
    box-sizing: border-box;
}

.product-add {
    border: 1px solid #ff8a65;
    height: 30rpx;
    width: 30rpx;
    line-height: 26rpx;
    text-align: center;
    border-radius: 100%;
    position: relative;
    color: #ff8a65;
}

.product-add view {
    position: absolute;
    top: -20rpx;
    right: 10rpx;
    background: #f44336;
    color: #fff;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 100%;
    font-size: 18rpx;
}

.iconfont_size {
    font-size: 20rpx;
}

.mt-8 {
    margin-top: -8rpx;
}

.no-search {
    padding: 88rpx 0;
    text-align: center;
}

.no-search image {
    width: 320rpx;
    height: 200rpx;
    display: block;
    margin: auto;
    margin-bottom: 16rpx;
}

.no-search view {
    line-height: 40rpx;
    color: #747474;
}

.search-rpo-txt-price .sell .product-volume {
    margin-left: 24rpx;
    color: #999;
    font-size: 24rpx;
    font-weight: normal;
}