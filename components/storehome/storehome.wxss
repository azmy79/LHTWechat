@import "../../app.wxss";

page {
    background-color: #f5f5f5;
}

.slide-image {
    width: 100%;
}

.stroe {
    background: #fff;
    overflow: hidden;
}

.stroe .outer {
    width: 100%;
    display: flex;
}

.stroe .pic {
    margin-top: 2rpx;
    float: left;
    overflow: hidden;
}

.stroe .pic image {
    border-radius: 50%;
    border: 8rpx solid #fff;
    width: 152rpx;
    height: 152rpx;
    box-sizing: border-box;
}

.menu {
    background: #fff;
    margin-top: 24rpx;
}

.menu-icon {
    float: left;
    text-align: center;
    margin: 24rpx 0;
}

.menu-icon .image-box {
    width: 64%;
    padding-top: 64%;
    position: relative;
    display: inline-block;
}

.menu-icon image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.menu-icon .menu-name {
    font-size: 22rpx;
    margin-top: 8rpx;
    color: #515151;
    line-height: 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 0 8rpx;
}

image {
    display: inline-block;
}

.floor-img {
    width: 100%;
    margin-top: 24rpx;
}

.stroe .info {
    float: left;
    margin-left: 16rpx;
    color: #fff;
    flex: 1;
}

.icon-width {
    position: relative;
    width: 28rpx;
    font-size: 28rpx;
    float: left;
}

.coup-lineheight {
    line-height: 56rpx;
    overflow: hidden;
}

.index-pro {
    position: inherit!important;
}

.stroe .info_name {
    font-size: 36rpx;
    width: 426rpx;
    float: left;
    line-height: 48rpx;
    overflow: hidden;
}

.name {
    width: 360rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    font-weight: bold;
}

.stroe .tel {
    float: right;
}

.stroe .info_icon {
    width: 0;
    height: 0;
    border-left: 16rpx solid transparent;
    border-right: 16rpx solid transparent;
    border-top: 16rpx solid #333;
}

.icon_phone-ios {
    float: right;
}

.icon- {
    line-height: 48rpx;
    font-size: 32rpx!important;
    vertical-align: bottom;
    margin-left: 8rpx;
    float: left;
    height: 20rpx;
}

.line-color {
    margin-right: 16rpx;
    color: #000;
    filter: alpha(opacity=20);
    opacity: 0.2;
    width: 1rpx;
}

.stroe .distance {
    float: right;
    margin-top: 4rpx;
}

.stroe .address {
    float: left;
    overflow: hidden;
    width: 320rpx;
    line-height: 32rpx;
    max-height: 96rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-top: 8rpx;
    font-size: 24rpx;
}

.coupinfo-content {
    margin: 0 auto;
}

.copulist .counpinfo {
    width: 340rpx;
    float: left;
}

.copulist .counpinfo:nth-child(2n) {
    float: right;
}

.coupinfo-price {
    display: flex;
    height: 96rpx;
    line-height: 96rpx;
    overflow: hidden;
    font-size: 60rpx;
    font-weight: 500;
    padding-left: 24rpx;
    border-radius: 8rpx 8rpx 0 0;
}

.coupinfo-price .icon {
    padding-top: 6rpx;
    font-weight: normal;
}

.coupinfo-content .coupinfo-des {
    font-size: 24rpx;
    color: #212121;
    border-radius: 0 0 8rpx 8rpx;
    border: 1rpx #e0e0e0 solid;
    padding: 16rpx 24rpx;
    border-top: none;
    line-height: 40rpx;
}

.copulist navigator:nth-child(2) {
    float: right;
}

.deg {
    position: fixed;
    bottom: 150rpx;
    right: 24rpx;
    width: 96rpx;
    height: 96rpx;
    background: #ff5722;
    border-radius: 100%;
    z-index: 6;
}

.deg button {
    border: none;
    background: none;
    border-radius: 0;
    color: #fff;
    font-size: 20rpx;
    line-height: 48rpx;
    padding: 24rpx 0;
    text-align: center;
}

.deg button:after {
    border: none;
}

.prodcut-list {
    position: relative;
    background: #fff;
    padding: 0 24rpx;
    margin-top: 24rpx;
}

.prodcut-list .product-info {
    border-bottom: 1rpx #eee solid;
    width: 702rpx;
    float: left;
}

.product-info .product-pic {
    width: 160rpx;
    height: 160rpx;
    float: left;
}

.product-info .product-pic image {
    width: 160rpx;
    height: 160rpx;
}

.product-info .product-des {
}

.product-info .product-des .product-name {
    font-size: 32rpx;
    color: #212121;
    line-height: 48rpx;
    height: 96rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.product-info .product-des .product-name:active {
    background: #f5f5f5;
}

.product-info .product-des .product-price view {
    float: left;
    color: #ff221a;
    text-decoration: none;
    line-height: 48rpx;
    font-weight: 600;
}

.product-info .product-des .product-price .market-price {
    margin-left: 16rpx;
    color: #bdbdbd;
    text-decoration: line-through;
    line-height: 48rpx;
    padding-top: 4rpx;
    font-weight: normal;
}

.search-pro-shop {
    float: right;
    position: relative;
}

.search-pro-shop .iconfont {
    font-size: 44rpx;
    color: #ff221a;
    line-height: 44rpx;
}

.search-pro-shop .buy-num {
    width: 140rpx;
    position: relative;
    padding: 0 44rpx;
    text-align: center;
    line-height: 44rpx;
    height: 44rpx;
    color: #212121;
    background: #fff;
    font-size: 32rpx;
    box-sizing: border-box;
}

.search-pro-shop .buy-num .iconfont {
    position: absolute;
    top: 0;
}

.search-pro-shop .buy-num .icon-minus {
    left: 0;
}

.search-pro-shop .buy-num .icon-plus {
    right: 0;
}

.search-pro-shop .iconfont .num {
    min-width: 28rpx;
    padding: 0 8rpx;
    line-height: 28rpx;
    text-align: center;
    border-radius: 28rpx;
    background: #fff;
    font-size: 20rpx;
    position: absolute;
    right: -12rpx;
    top: -12rpx;
    color: #ff221a;
    border: 1rpx solid #ff221a;
    box-sizing: border-box;
}

.product-shop .product-add {
    text-align: center;
    position: relative;
    color: #ffa000;
}

.product-buy-home {
    overflow: hidden;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
}

.product-buy-home .l,.product-buy-home .r {
    width: 24rpx;
    float: left;
    color: #ffa000;
    height: 100%;
}

.product-buy-home .iconfont {
    display: block;
}

.product-buy-home .m {
    width: 95rpx;
    text-align: center;
    line-height: 46rpx;
    font-size: 32rpx;
    float: left;
    color: black;
}

.product-shop .product-add .coust {
    position: absolute;
    top: -10rpx;
    right: -8rpx;
    background: #ff5252;
    color: #fff;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 100%;
    font-size: 20rpx;
    z-index: 5;
}

.store-active {
    position: relative;
    color: #747474;
    background-color: #fff;
}

.store-active .activename:nth-child(n+2) {
    display: none;
}

.select .activename:nth-child(n+2) {
    display: block;
}

.store-active-num {
    position: absolute;
    right: 24rpx;
    top: 24rpx;
}

.badge_jian_ {
    color: #ff5252;
}

.badge_song_ {
    color: #ff9800;
}

.badge_mian_ {
    color: #ffc107;
}

.icon-3 {
    top: 3rpx;
}

.icon-1 {
    top: 6rpx;
}

.ic-buy {
    width: 42rpx;
    height: 42rpx;
    background: #ffa000;
    color: #fff;
    font-size: 24rpx;
    border-radius: 50%;
    line-height: 40rpx;
    text-align: center;
}

.cart-px {
    font-size: 24rpx;
}