@import "../../app.wxss";

.bg-white {
    background: #fff;
}

.border-bottom {
    border-bottom: 1px solid #eee;
}

.border-top {
    border-top: 1px solid #eee;
}

.border-left {
    border-left: 1px solid #eee;
}

.border-right {
    border-right: 1px solid #eee;
}

.html-content {
    position: relative;
    background: #fff;
}

.title-node {
    font-size: 30rpx;
    line-height: 48rpx;
    padding: 0 24rpx;
}

.title-node text {
    display: inline-block;
}

.title-node.style0 text {
    padding-left: 16rpx;
    border-left: 4rpx solid #ff221a;
    line-height: 30rpx;
}

.title-node.style0.right text {
    padding-left: 0;
    border-left: 0;
    padding-right: 16rpx;
    border-right: 4rpx solid #ff221a;
}

.title-node.style1 text {
    border-bottom: 4rpx solid #ff221a;
}

.title-node.style2 {
    background: #fff;
}

.img-list image {
    width: 100%;
}

.page-section-spacing {
    box-sizing: border-box;
}

.slide-image {
    width: 750rpx;
    height: 375rpx;
    display: inline-block;
}

.flex-wrp {
    width: 100%;
    display: flex;
}

.flex-wrp image {
    display: flex;
}

.flex-item {
    width: 25%;
    margin-right: 1px;
    overflow: hidden;
}

.flex-wrp .flex-item:last-child {
    margin-right: 0;
}

.flex-item image {
    display: flex;
    width: 100px;
    height: 100px;
}

.flex-group image {
    display: flex;
}

.flex-group-top {
    width: 100%;
    height: 72px;
    overflow: hidden;
}

.flex-group-top image {
    width: 750px;
    height: 72px;
}

.flex-group-l {
    float: left;
    width: 40%;
    height: 360rpx;
    overflow: hidden;
}

.flex-group-l .pic {
    width: 300px;
}

.flex-group-r {
    float: left;
    width: 60%;
    overflow: hidden;
    height: 360rpx;
}

.page-section {
    padding-bottom: 20rpx;
}

.page-section .banner-pic {
    overflow: hidden;
}

.page-section .hd-pic {
    overflow: hidden;
}

.page-section .hd-pic image {
    overflow: hidden;
    display: block;
}

.page-section .bd-pic {
    width: 100%;
    overflow: hidden;
    display: flex;
}

.page-section .bd-pic .bd-l-pic {
    float: left;
    width: 40%;
}

.page-section .bd-pic .bd-r-pic {
    float: right;
    width: 60%;
}

.page-section .bd-pic .bd-r-pic .bd-r-t-pic,.page-section .bd-pic .bd-r-pic .bd-r-b-pic,.bd-l-t-pic,.bd-l-b-pic {
    display: flex;
    overflow: hidden;
    font-size: 0;
}

.bd-r-b-l-pic {
    float: left;
    width: 50%;
    overflow: hidden;
}

.bd-r-b-r-pic {
    float: right;
    width: 50%;
    overflow: hidden;
}

.page-section .bd-list-b {
    width: 100%;
    height: 180rpx;
    overflow: hidden;
    display: flex;
}

.page-section .bd-list-b .bd-list-b-pic {
    width: 25%;
    float: left;
}

.menu {
    padding: 15rpx 0;
    overflow: hidden;
}

.homecont .menu:last-child {
    margin-bottom: 24rpx;
}

.menu-icon {
    float: left;
    text-align: center;
    margin: 32rpx 0;
}

.menu-icon .image-box {
    width: 64%;
    padding-top: 64%;
    position: relative;
    display: inline-block;
}

.menu-icon image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.menu-icon .menu-name {
    font-size: 22rpx;
    margin-top: 8rpx;
    color: #515151;
    line-height: 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 0 8rpx;
}

.page-section .bd-list-pic {
    width: 100%;
    overflow: hidden;
}

.page-section .bd-list-pic .bd-list-pro-pic {
    width: 50%;
    height: 180rpx;
    float: left;
    overflow: hidden;
    box-sizing: border-box;
}

.page-section .bd-list-pic .bd-list-pro-pic:nth-child(2n+0) image {
    border-right: 0;
}

.page-section-title {
    text-align: center;
    padding: 24rpx 0;
    margin: 0 24rpx;
    line-height: 48rpx;
    color: #212121;
}

.page-section-title .iconfont {
    color: #212121;
    margin-right: 10rpx;
}

.prodcut-list {
    margin: 0 24rpx;
    width: 702rpx;
}

.page-section .prodcut-list .prodcut-comm {
    margin: 0 -12rpx;
}

.page-section .prodcut-list .prodcut {
    background-color: #fff;
    width: 339rpx;
    overflow: hidden;
    float: left;
    border-top: 1rpx solid #f0f0f0;
    padding: 24rpx 12rpx 0 12rpx;
}

.page-section .prodcut-list .prodcut .product-des {
    margin-top: 20rpx;
}

.page-section .prodcut-list .prodcut .product-pic {
    width: 100%;
    height: 320rpx;
    text-align: center;
    overflow: hidden;
}

.page-section .prodcut-list .prodcut .product-pic image {
    vertical-align: middle;
}

.page-section .prodcut-list .prodcut .product-des .product-name {
    font-size: 28rpx;
    line-height: 35rpx;
    height: 70rpx;
    overflow: hidden;
    color: #424242;
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.product-into-home {
    height: 48rpx;
    margin-top: 14rpx;
    margin-bottom: 36rpx;
    position: relative;
}

.product-add .font48 {
    font-size: 48rpx;
}

.product-into-home .product-price {
    font-size: 32rpx;
    overflow: hidden;
    color: #424242;
    float: left;
    line-height: 36rpx;
    margin-top: 5rpx;
}

.product-into-home .product-shop {
    float: right;
}

.product-into-home .product-shop .product-buy {
    overflow: hidden;
    border: 1px solid #ff221a;
    border-radius: 20px;
    text-align: center;
    width: 143rpx;
    height: 46rpx;
    line-height: 48rpx;
    padding: 0 10rpx;
}

.product-into-home .product-shop .product-buy .l {
    float: left;
    color: #ff221a;
    margin-top: -3rpx;
    width: 24rpx;
}

.product-into-home .product-shop .product-buy .r {
    float: right;
    color: #ff221a;
    width: 24rpx;
    margin-top: -3rpx;
}

.product-into-home .product-shop .product-buy .m {
    width: 95rpx;
    text-align: center;
    line-height: 48rpx;
    font-size: 32rpx;
    float: left;
    color: black;
}

.product-into-home .product-add {
    text-align: center;
    position: relative;
    color: #ff221a;
}

.product-into-home .product-add .coust {
    position: absolute;
    top: -10rpx;
    right: -8rpx;
    background: #f44336;
    color: #fff;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 100%;
    font-size: 20rpx;
}

.page-section .prodcut-list .product-add {
    float: right;
    text-align: center;
    position: relative;
}

.product-list {
    padding: 0rpx 10rpx;
}

.page-section .product-list .product-add-num {
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    background: #333;
    color: #fff;
    width: 25rpx;
    height: 25rpx;
    line-height: 25rpx;
    border-radius: 100%;
    font-size: 52rpx;
}

.product-price text {
    font-family: arial;
}

.page-section.merchandise {
    background: #fff;
}

.swiper-box swiper {
    display: block;
    height: 375rpx;
}

.search-box {
    position: relative;
    overflow: hidden;
    padding: 0 24rpx 24rpx;
    background-color: #fff;
    padding-top: 24rpx;
}

.search {
    display: flex;
    position: relative;
    border-radius: 5px;
    width: 702rpx;
    height: 72rpx;
    line-height: 72rpx;
    background: #e00022;
    z-index: 1;
    background: #f7f7f7;
}

.search .text {
    width: 682rpx;
    text-align: center;
    font-size: 32rpx;
    height: 72rpx;
    color: #ccc;
    line-height: 72rpx;
    padding-left: 35rpx;
}

.search .iconsearch {
    position: absolute;
    color: #ccc;
    top: 0rpx;
    left: 295rpx;
}

.custom-line {
    height: 0;
    overflow: hidden;
}

.link-list {
    margin-left: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    line-height: 80rpx;
    text-overflow: ellipsis;
    padding-right: 96rpx;
    position: relative;
}

.link-list+.link-list {
    border-top: 1rpx solid #f0f0f0;
}

.link-list .iconfont {
    position: absolute;
    right: 24rpx;
    color: #bdbdbd;
    font-size: 24rpx;
}

.showcase {
    padding-top: 10rpx;
}

.showcase-left {
    float: left;
    width: 368rpx;
}

.showcase-left image {
    width: 100%;
    height: 360px;
}

.showcase-right {
    float: right;
    width: 368rpx;
}

.showcase-right image {
    width: 100%;
    height: 176px;
}

.showcase-right image:first-child {
    margin-bottom: 10rpx;
}

.product-list .item {
    background: #fff;
    margin-bottom: 12rpx;
    position: relative;
    border: 1rpx solid #E9E9E9;
    padding: 0rpx 2rpx;
}

.product-list .item .pic {
    width: 100%;
    position: relative;
    padding-top: 100%;
    overflow: hidden;
}

.product-list .item .pic image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.product-list .item .name {
    color: #222;
    padding: 0 16rpx;
    margin: 16rpx 0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    height: 72rpx;
    line-height: 36rpx;
}

.product-list .item .buy-info {
    position: relative;
    padding: 16rpx 24rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.product-list .item .price {
    color: #ff221a;
    display: inline-block;
}

.product-list .item .add-cart {
    float: right;
}

.product-list .item .icon-addcart {
    color: #ff221a;
    font-size: 44rpx;
    padding: 8rpx;
    margin: -8rpx;
}

.pro-style1 .item,.pro-style5 .item {
    width: calc(50% - 12rpx);
    float: left;
}

.pro-style1 .item:nth-child(2n),.pro-style5 .item:nth-child(2n) {
    float: right;
}

.pro-style2 .item .name,.pro-style3 .item:nth-child(3n+1) .name {
    height: 36rpx;
    -webkit-line-clamp: 1;
}

.pro-style3 .item {
    width: calc(50% - 12rpx);
    float: left;
}

.pro-style3 .item:nth-child(3n+1) {
    width: 100%;
    float: left;
}

.pro-style3 .item:nth-child(3n) {
    float: right;
}

.pro-style4 {
    margin: 0 16rpx;
}

.pro-style4 .item {
    padding: 16rpx;
    height: 196rpx;
}

.pro-style4 .item .name {
    -webkit-line-clamp: 3;
}

.pro-style4 .item .buy-info,.pro-style4 .item .name {
    padding: 0 8rpx 0 0;
}

.pro-style4 .item .pic {
    float: left;
    width: 196rpx;
    height: 196rpx;
    padding: 0;
    margin-right: 24rpx;
}

.pro-style6 {
    white-space: nowrap;
    overflow-x: auto;
}

.pro-style6 .item {
    display: inline-block;
    width: 44%;
    margin-right: 12rpx;
}

.pro-style6 .item:last-child {
    margin-right: 0;
}

.pro-style6 .item .name {
    white-space: normal;
}

view {
    overflow: visible;
}

.WxEmojiView {
    padding-left: 16rpx;
}

.page-section .image-box {
    display: block;
    margin: 20rpx auto;
