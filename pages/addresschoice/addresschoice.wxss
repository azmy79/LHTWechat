page {
    background: #F7F7F7;
    padding-bottom: 105rpx;
}

.addresslist {
    background: #fff;
    position: relative;
    border-radius: 16rpx;
}

.addressdetail {
    position: relative;
    padding: 0 24rpx 0 96rpx;
    margin-bottom: 24rpx;
}

.update {
    width: 48rpx;
    font-size: 24rpx;
    color: #1890FF;
    position: absolute;
    right: 24rpx;
    top: 40rpx;
}

.icon-edit {
    width: 48rpx;
    color: #424242;
    position: absolute;
    right: 24rpx;
    top: 50%;
    margin-top: -24rpx;
}

.check-radio {
    position: absolute;
    left: 24rpx;
    top: 50%;
    margin-top: -24rpx;
}

.addressname,.addresscont,.addressmor {
    overflow: hidden;
    padding-left: 0;
    padding-right: 72rpx;
}

.addressnamel {
    width: 350rpx;
    line-height: 48rpx;
    font-size: 30rpx;
}

.addresscont {
    padding-bottom: 24rpx;
    font-size: 26rpx;
    line-height: 36rpx;
    color: #747474;
}

.addressmorr {
    width: 44rpx;
    height: 44rpx;
    float: right;
}

.btmbg {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    zoom: 1;
    top: 0;
    left: 0;
    opacity: 0.3;
}

.tanchu {
    position: fixed;
    top: 310rpx;
    z-index: 2;
    width: 620rpx;
    left: 60rpx;
    border-radius: 20rpx;
    background: #fff;
}

.queshac {
    display: flex;
    border-top: 1px solid #ddd;
}

.queshac button {
    width: 50%;
    background: #ddd;
}

.quedsccon {
    padding: 50rpx 40rpx;
}

.queshac button::after {
    display: none;
}

.queshac button.queding {
    background: #fff;
}

.addressmorl {
    float: left;
}

.addressmorl text {
    color: #212121;
    font-size: 28rpx;
    line-height: 40rpx;
    padding-top: 8rpx;
    padding-left: 8rpx;
}

.xinzheng {
    background: #fff;
    padding: 16rpx 24rpx;
    box-sizing: border-box;
}

.xinzheng button,.xinzheng button::after {
    border: none;
}

.xinzheng button {
    background: #fff;
    color: #fff;
    width: 100%;
    line-height: 40rpx;
    font-size: 28rpx;
    padding: 16rpx 0;
    border-radius: 8rpx;
}