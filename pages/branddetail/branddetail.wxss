page {
    background: #fff;
    font-size: 30rpx;
    color: #212121;
}

.brand-logo {
    width: 100%;
}

.brand-tab {
    height: 88rpx;
    display: flex;
    border-bottom: 1rpx solid #eee;
    position: sticky;
    top: 0;
    background-color: #fff;
}

.brand-tab .tab-item {
    width: 100%;
    flex-shrink: 1;
    text-align: center;
}

.brand-tab .tab-item text {
    line-height: 88rpx;
    display: inline-block;
}

.brand-tab .tab-item.active text {
    color: #fff;
    border-bottom: 4rpx solid #fff;
}

.brand-product {
    background: #fff;
    padding: 32rpx 24rpx 32rpx 0;
    margin-left: 24rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #eee;
}

.brand-product .imgbox {
    flex-shrink: 0;
    width: 160rpx;
    height: 160rpx;
    margin-right: 16rpx;
    border: 1rpx solid #e0e0e0;
}

.brand-product image {
    width: 160rpx;
    height: 160rpx;
}

.brand-product .item-content {
    flex-shrink: 1;
    width: 100%;
    overflow: hidden;
}

.brand-product .title {
    font-size: 30rpx;
    line-height: 48rpx;
    height: 96rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.brand-product .submes-row {
    display: flex;
    justify-content: space-between;
    font-size: 32rpx;
    margin-top: 20rpx;
    line-height: 44rpx;
}

.brand-product .submes-row text {
    font-size: 24rpx;
}

.empty {
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 120rpx;
}

.empty image {
    width: 160rpx;
    height: 100rpx;
    margin-bottom: 40rpx;
}