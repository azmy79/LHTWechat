page {
    background: #f5f5f5;
}

.brand {
    overflow: hidden;
    padding: 24rpx;
    display: flex;
    flex-wrap: wrap;
}

.brandlist {
    margin-bottom: 24rpx;
    border-radius: 4rpx;
    width: calc(50% - 16rpx);
    overflow: hidden;
    background-color: #ffffff;
}

.brand .brandlist:nth-child(2n) {
    margin-left: 24rpx;
}

.brandimg {
    padding: 8rpx;
}

.brandimg image {
    width: 100%;
    height: 108rpx;
    display: block;
}

.brandname {
    line-height: 40rpx;
    color: #ffffff;
    background-color: #000000;
    font-size: 20rpx;
    text-align: center;
}