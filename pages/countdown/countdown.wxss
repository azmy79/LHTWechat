.page-section {
    font-size: 28rpx;
    overflow: hidden;
    background: #f5f5f5;
    margin-bottom: 56rpx;
}

.bg-white {
    background: #fff;
}

.countdown-banner image {
    width: 100%;
    height: 240rpx;
}

.countdown-list {
    overflow: hidden;
}

.countdown {
    padding: 48rpx 24rpx 0;
    overflow: hidden;
    border-radius: 8rpx;
}

.countdown .info {
}

.countdown-info-pic {
    float: left;
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
    margin-right: 16rpx;
}

.countdown-info-pic image {
    width: 100%;
    height: 100%;
}

.countdow-info-txt {
    overflow: hidden;
    margin-left: 16rpx;
}

.countdow-info-name {
    line-height: 48rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    height: 96rpx;
}

.countdow-info-b {
    margin-top: 22rpx;
    overflow: hidden;
    line-height: 40rpx;
}

.saleprice {
    float: left;
    color: #212121;
}

.saleprice .price {
    float: left;
    font-size: 26rpx;
}

.saleprice .price text {
    font-weight: bold;
    font-size: 32rpx;
}

.saleprice .oldprice {
    float: left;
    font-size: 24rpx;
    color: #bdbdbd;
    font-weight: 0;
    text-decoration: line-through;
    margin-left: 14rpx;
}

.countdown-btn {
    float: right;
    padding: 0 16rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 8rpx;
    color: #fff;
    font-size: 20rpx;
    background: #fff;
}

.countdow-start {
    background: linear-gradient(to right,#03a9f4,#0288d1);
}