page {
    background: #f5f5f5;
}

.flex-row {
    display: flex;
}

.flex-item {
    flex: 1;
}

.tab {
    position: sticky;
    top: -1px;
    background-color: #fff;
    z-index: 99;
    height: 96rpx;
    color: #616161;
    font-size: 30rpx;
    line-height: 96rpx;
    text-align: center;
}

.tab .flex-item {
    margin: 0 24rpx;
}

.tab .tab-active {
    color: #212121;
    border-bottom: 4rpx solid #212121;
}

.tab .tab-active text {
    color: #fb1438;
}

.member-list {
    padding: 24rpx;
}

.list-item {
    background-color: #fff;
    padding: 0 24rpx;
    color: #747474;
    margin-bottom: 24rpx;
}

.list-item .header {
    height: 96rpx;
    line-height: 96rpx;
    border-bottom: 1rpx solid #eee;
}

.list-item .header image {
    border-radius: 50%;
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
    display: inline-block;
    vertical-align: middle;
}

.list-item .list-content {
    height: 144rpx;
    align-items: center;
    text-align: center;
    line-height: 40rpx;
}

.list-item .list-content .h4 {
    color: #212121;
    font-size: 32rpx;
    line-height: 56rpx;
    font-weight: 600;
}

.color21 {
    color: #212121;
}

.header-left {
    display: flex;
    align-items: center;
    overflow: hidden;
}

.header-right {
    text-align: right;
    flex: 0 1 auto;
}

.header-left .overflow {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
    flex-shrink: 1;
}

.empty {
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 120rpx;
    color: #515151;
}

.empty image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 40rpx;
}

.empty .h2 {
    font-size: 32rpx;
    font-weight: 600;
    color: #212121;
}