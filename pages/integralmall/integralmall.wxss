page {
    background-color: #f7f7f7;
}

.pointmall-head {
    display: flex;
    box-sizing: border-box;
    height: 160rpx;
    align-items: center;
    background-size: 100% 100%;
    padding: 24rpx;
}

.pointmall-head image {
    width: 96rpx;
    height: 96rpx;
    border: 1rpx solid #fff;
    border-radius: 50%;
    flex-shrink: 0;
    margin-right: 24rpx;
}

.pointmall-head .user {
    color: #fff;
    font-size: 24rpx;
    line-height: 32rpx;
}

.pointmall-head .name {
    font-size: 32rpx;
    line-height: 48rpx;
    margin-bottom: 6rpx;
}

.pro_tab {
    height: 88rpx;
    background: #fff;
    border-bottom: 1px solid #eeeeee;
    width: 100%;
    font-size: 28rpx;
    display: flex;
    position: sticky;
    top: 0;
    z-index: 8;
}

.tab_active {
    border-bottom: 4rpx solid #fff;
    color: #fff;
}

.pro_tab_flex {
    width: 50%;
    text-align: center;
}

.pro_tab_flex text {
    display: inline-block;
    line-height: 40rpx;
    padding: 24rpx 0;
}

.gift-lists {
    background-color: #fff;
}

.gift-list {
    background: #fff;
    padding: 32rpx 24rpx 32rpx 0;
    margin-left: 24rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #eee;
}

.gift-list .imgbox {
    flex-shrink: 0;
    width: 160rpx;
    height: 160rpx;
    margin-right: 16rpx;
    border: 1rpx solid #e0e0e0;
}

.gift-list image {
    width: 160rpx;
    height: 160rpx;
}

.gift-list .item-content {
    flex-shrink: 1;
    width: 100%;
    overflow: hidden;
}

.gift-list .title {
    font-size: 30rpx;
    line-height: 48rpx;
    height: 96rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.gift-list .submes-row {
    display: flex;
    justify-content: space-between;
    font-size: 32rpx;
    margin-top: 20rpx;
    line-height: 44rpx;
}

.gift-list .submes-row text {
    font-size: 24rpx;
}

.exchange {
    text-align: center;
    background: #fff;
    border-radius: 8rpx;
    font-size: 24rpx;
    color: #ffffff;
    padding: 0 24rpx;
    height: 56rpx;
    line-height: 56rpx;
    flex-shrink: 0;
}

.couponlists {
    padding: 0 24rpx 24rpx 24rpx;
}

.couponlist {
    margin-top: 24rpx;
    background-color: #ffffff;
    display: flex;
    border-radius: 8rpx;
    padding: 24rpx;
    overflow: hidden;
}

.coupon-left {
    flex-shrink: 0;
    padding-right: 16rpx;
    border-right: 2rpx dashed #F5222D;
    margin-right: 16rpx;
    line-height: 28rpx;
    font-size: 20rpx;
}

.coupon-left .price {
    color: #F5222D;
    line-height: 68rpx;
    font-size: 48rpx;
    margin-bottom: 8rpx;
}

.coupon-left .price text {
    font-size: 32rpx;
}

.coupon-right {
    width: 100%;
    flex-shrink: 1;
    overflow: hidden;
}

.primary-row {
    display: flex;
    height: 40rpx;
    line-height: 40rpx;
    margin-bottom: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.primary-row .name {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
}

.primary-row .point {
    flex-shrink: 0;
    font-size: 32rpx;
}

.primary-row .point text {
    font-size: 24rpx;
}

.sub-row {
    display: flex;
    align-items: center;
}

.sub-row .tips {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 20rpx;
    line-height: 32rpx;
    color: #747474;
}

.sub-row .tips .tip {
    position: relative;
    padding-left: 16rpx;
}

.sub-row .tips .tip::after {
    content: '';
    width: 4rpx;
    height: 4rpx;
    background-color: #F5222D;
    position: absolute;
    left: 0;
    top: 18rpx;
}

.empty {
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 120rpx;
}

.empty image {
    width: 160rpx;
    height: 100rpx;
    margin-bottom: 40rpx;
}