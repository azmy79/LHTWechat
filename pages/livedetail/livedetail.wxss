.page-root {
    background: #fff;
    min-height: calc(100vh - 136rpx);
    padding-bottom: 136rpx;
}

.live-user {
    height: 750rpx;
    position: relative;
}

.live-user image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 750rpx;
}

.live-user .body {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
}

.live-user .status {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 286rpx;
    line-height: 40rpx;
    text-align: center;
    padding: 16rpx 32rpx;
    font-weight: 400;
    background-color: rgba(63,70,75,0.72);
    color: #fff;
    border-radius: 16rpx;
    transform: translateX(-50%);
}

.live-user .hot {
    position: absolute;
    right: 24rpx;
    bottom: 24rpx;
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    padding: 16rpx;
    line-height: 20rpx;
    font-size: 20rpx;
    font-weight: 400;
    border-radius: 32rpx;
}

.live-playback {
    padding: 32rpx 48rpx 8rpx;
}

.live-playback button {
    line-height: 88rpx;
    border-radius: 44rpx;
}

.live-info {
    padding: 24rpx 24rpx 48rpx;
    display: flex;
}

.live-info .main {
    padding-right: 16rpx;
    flex: 1;
    overflow: hidden;
}

.live-info .title {
    line-height: 50rpx;
    font-size: 36rpx;
    font-weight: 500;
}

.live-info .name-wrap {
    display: flex;
    padding-top: 24rpx;
    overflow: hidden;
}

.live-info .name-wrap image {
    min-width: 40rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    overflow: hidden;
}

.live-info .name-wrap .name {
    line-height: 40rpx;
    height: 40rpx;
    padding: 0 16rpx 0 8rpx;
    max-width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.live-info .name-wrap .follow {
    display: inline-block;
    padding: 0 16rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: linear-gradient(270deg,#ff4f61 0%,#f52440 100%);
    border-radius: 28rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
}

.live-info .share {
    padding: 0;
    background-color: #fff;
    line-height: 1;
}

.live-info .share::after {
    display: none;
}

.live-info .share .iconfont {
    font-size: 40rpx;
    color: #F52440;
}

.live-info .share .text {
    display: block;
    line-height: 32rpx;
    font-size: 24rpx;
    color: #8F8F8F;
}

.live-summary {
    padding: 32rpx 24rpx;
    line-height: 40rpx;
}

.live-product {
    padding: 0 24rpx;
}

.live-product .title {
    padding: 32rpx 0 8rpx;
    line-height: 46rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.live-product .list {
    display: flex;
    margin: 0 -12rpx 0 -12rpx;
    flex-wrap: wrap;
}

.live-product .item {
    margin-top: 24rpx;
    padding: 0 12rpx 24rpx;
    box-sizing: border-box;
    max-width: 50%;
    width: 50%;
}

.live-product image {
    display: block;
    width: 339rpx;
    height: 339rpx;
    margin: 0 auto;
}

.live-product .name {
    padding-top: 16rpx;
    line-height: 40rpx;
    font-weight: 400;
    height: 80rpx;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.live-product .money {
    padding-top: 24rpx;
    line-height: 32rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #F52440;
}

.live-product .money text {
    font-weight: normal;
    font-size: 24rpx;
}

.live-remind {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 136rpx;
    display: flex;
    background-color: #fff;
    align-items: center;
    padding: 0 24rpx 0 20rpx;
}

.live-remind .time-wrap {
    flex: 1;
    overflow: hidden;
    line-height: 40rpx;
    color: #6FC246;
}

.live-remind .timeout {
    flex: 1;
    overflow: hidden;
    line-height: 40rpx;
    font-size: 32rpx;
}

.live-remind .time-wrap text {
    margin: 0 4rpx;
    color: #5C5C5C;
    font-size: 32rpx;
}

.live-remind .remind text {
    display: block;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 48rpx;
    color: #fff;
    background-color: #6FC246;
    border-radius: 44rpx;
    font-size: 30rpx;
}

.live-remind-tolive {
    height: 88rpx;
    border-radius: 44rpx;
    background-color: #F52440;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    line-height: 88rpx;
    flex: 1;
    overflow: hidden;
}

subscribe .subscribe--live-player-subscribe__btn {
    width: 216rpx;
    height: 88rpx;
    background: #1890FF;
    border-radius: 44rpx;
    font-weight: normal;
    font-size: 30rpx;
    line-height: 88rpx;
}

subscribe .subscribe--live-player-hasSubscribe {
    background: #53a6f3;
}

.btn {
    border-radius: 40rpx;
    font-size: 28rpx;
    color: #212121;
    background-color: #fff;
}

.btn::after {
    border-color: #E6E6E6;
    border-radius: 80rpx;
}

.btn-primary {
    background-color: #F52440;
    color: #fff;
}

.btn-primary::after {
    display: none;
}