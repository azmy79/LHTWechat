.live-list {
    min-height: 100vh;
    background: #FAFAFA;
    box-sizing: border-box;
    padding: 12rpx;
}

.live-list .item {
    display: inline-block;
    vertical-align: top;
    width: 50%;
    padding: 12rpx;
    box-sizing: border-box;
}

.live-list .item.first {
    width: 100%;
}

.live-list .item.first .img-area {
    height: 702rpx;
    border-radius: 16rpx;
}

.live-list .item.first .img-area .status {
    top: 40rpx;
    left: 32rpx;
}

.live-list .item .img-area {
    position: relative;
    width: 100%;
    height: 416rpx;
    border-radius: 16rpx 16rpx 0 0;
    overflow: hidden;
}

.live-list .item .img-area image,.live-list .item .img-area .mask {
    width: 100%;
    height: 100%;
}

.live-list .item .img-area .mask {
    position: absolute;
    z-index: 1;
    left: 0;
    top: 0;
    background: -webkit-linear-gradient(top,rgba(0,0,0,0.08),rgba(0,0,0,0.4));
}

.live-list .item .img-area .mask image {
    width: 120rpx;
    height: 120rpx;
    margin: 290rpx 0 0 290rpx;
}

.live-list .item .img-area .status {
    position: absolute;
    z-index: 2;
    top: 24rpx;
    left: 24rpx;
    background: rgba(0,0,0,0.2);
    border-radius: 16rpx;
    padding-right: 16rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 32rpx;
}

.live-list .item .img-area .status.no-start text {
    background: #339DFF;
}

.live-list .item .img-area .status text {
    display: inline-block;
    background: #FF3D47;
    border-radius: 16rpx;
    padding: 0 8rpx 0 24rpx;
    margin-right: 8rpx;
    position: relative;
    line-height: 32rpx;
}

.live-list .item .img-area .status text::before {
    position: absolute;
    content: "";
    background: #fff;
    left: 8rpx;
    top: 12rpx;
    width: 8rpx;
    height: 8rpx;
    border-radius: 100%;
}

.live-list .item .img-area .room {
    display: flex;
    align-items: flex-end;
    position: absolute;
    z-index: 2;
    left: 16rpx;
    right: 16rpx;
    bottom: 24rpx;
    line-height: 40rpx;
}

.live-list .item .img-area .room .room-name {
    flex: 1;
    color: rgba(255,255,255,0.8);
    font-size: 24rpx;
}

.live-list .item .img-area .room .room-name image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
    margin-right: 8rpx;
    vertical-align: bottom;
}

.live-list .item .img-area .room .give {
    color: rgba(255,255,255,0.8);
    font-size: 24rpx;
}

.live-list .item .img-area .room .give text {
    position: relative;
    top: -2rpx;
    font-size: 32rpx;
    vertical-align: middle;
    margin-right: 4rpx;
}

.live-list .item .img-area .room .subscribe {
    line-height: 32rpx;
    text-align: right;
    color: rgba(255,255,255,0.8);
    font-size: 24rpx;
}

.live-list .item .img-area .room .subscribe text {
    display: block;
    line-height: 28rpx;
    font-size: 20rpx;
}

.live-list .item .img-area .room-large {
    position: absolute;
    z-index: 2;
    left: 32rpx;
    right: 32rpx;
    bottom: 32rpx;
}

.live-list .item .img-area .room-large .room-name {
    line-height: 56rpx;
    color: rgba(255,255,255,0.8);
}

.live-list .item .img-area .room-large .room-name image {
    width: 56rpx;
    height: 56rpx;
    border-radius: 100%;
    margin-right: 8rpx;
    vertical-align: bottom;
}

.live-list .item .img-area .room-large .title {
    margin: 16rpx 0 24rpx;
    color: #fff;
    font-size: 32rpx;
}

.live-list .item .img-area .room-large .flex {
    display: flex;
    align-items: flex-end;
}

.live-list .item .img-area .room-large .product-image {
    display: flex;
    flex: 1;
}

.live-list .item .img-area .room-large .product-image .img {
    margin-right: 16rpx;
    position: relative;
}

.live-list .item .img-area .room-large .product-image .img view {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    padding-top: 28rpx;
    background: rgba(0,0,0,0.6);
    border-radius: 4rpx;
    color: #fff;
    text-align: center;
    line-height: 32rpx;
}

.live-list .item .img-area .room-large .product-image .img view text {
    font-size: 24rpx;
    display: block;
}

.live-list .item .img-area .room-large .product-image image {
    display: block;
    width: 112rpx;
    height: 112rpx;
    border-radius: 4rpx;
}

.live-list .item .img-area .room-large .give {
    color: rgba(255,255,255,0.8);
}

.live-list .item .img-area .room-large .give text {
    font-size: 56rpx;
    margin-right: 8rpx;
    vertical-align: middle;
}

.live-list .item .img-area .room-large .subscribe {
    line-height: 36rpx;
    text-align: right;
    color: rgba(255,255,255,0.8);
}

.live-list .item .img-area .room-large .subscribe text {
    display: block;
    font-size: 24rpx;
}

.live-list .item .text-area {
    padding: 16rpx;
    background: #fff;
    border-radius: 0 0 16rpx 16rpx;
}

.live-list .item .text-area .name {
    margin-bottom: 16rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.live-list .item .text-area .product {
    display: flex;
    height: 88rpx;
}

.live-list .item .text-area .product .text {
    flex: 1;
}

.live-list .item .text-area .product .text view:first-child {
    height: 32rpx;
    color: #8F8F8F;
    font-size: 24rpx;
    overflow: hidden;
}

.live-list .item .text-area .product .text view:last-child {
    margin-top: 16rpx;
}

.live-list .item .text-area .product .text view:last-child text {
    font-size: 20rpx;
}

.live-list .item .text-area image {
    margin-left: 16rpx;
    width: 88rpx;
    height: 88rpx;
    border-radius: 2rpx;
}