page {
    overflow: hidden;
}

.live-player {
    width: 100%;
    height: 100vh;
    background: linear-gradient(to top,#1d1f48,#2a2c55,#42446d,#51537c,#5c5f85,#595c7c);
}

.bg-img {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
}

.live-player-component__ready {
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity .2s;
}

.live-player-component__ready.play {
    opacity: 1;
}

.live-page-0 {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    z-index: 0;
}

.live-bottom-page__playing {
    width: 100%;
    height: 100%;
}

.live-player-room {
    width: 100%;
    height: 100%;
}

.live-page-1 {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 20;
    padding-bottom: 48rpx;
    box-sizing: border-box;
}

.live-player-room__inner {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
}

.live-player-normal__head {
    position: relative;
    z-index: 1;
    padding: 0 32rpx;
    display: flex;
}

.weui-navigation-bar {
    overflow: hidden;
}

.weui-navigation-bar__placeholder {
    height: 88rpx;
    background: #f8f8f8;
    position: relative;
    z-index: 50;
}

.weui-navigation-bar__inner {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5001;
    height: 88rpx;
    display: flex;
    align-items: center;
    padding-right: 0;
    width: 100%;
    box-sizing: initial;
}

.weui-navigation-bar__inner .weui-navigation-bar__left {
    position: relative;
    padding-left: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    -webkit-box-pack: center;
}

.weui-navigation-bar__inner .weui-navigation-bar__buttons {
    margin-right: 20rpx;
}

.weui-navigation-bar__inner .weui-navigation-bar__left .weui-navigation-bar__btn_goback {
    font-size: 24rpx;
    width: 48rpx;
    height: 2em;
    background-image: url("https://res.wx.qq.com/a/wx_fed/wechat_search_common_assets/res/wxlive/navigator_arrow-bde1939abd.svg");
    background-position: 50% 50%;
    background-size: 1em 2em;
    background-repeat: no-repeat;
}

.mode__navigation__with__white-icon .weui-navigation-bar__inner .weui-navigation-bar__left .weui-navigation-bar__btn_goback {
    background-image: url(https://res.wx.qq.com/a/wx_fed/wechat_search_common_assets/res/wxlive/backWhite-021be8be29.svg);
}

.weui-navigation-bar__inner .weui-navigation-bar__center {
    font-size: 34rpx;
    text-align: center;
    position: relative;
    flex: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.weui-navigation-bar__inner .weui-navigation-bar__right {
    margin-right: 0;
}

.weui-navigation-bar__inner .weui-navigation-bar__right {
    margin-right: 32rpx;
}

.mode__navigation__inner__with-home {
    position: relative;
    display: flex;
    align-items: flex-end;
}

.live-player__profile-card {
    position: relative;
    display: inline-block;
    background-color: rgba(0,0,0,0.25);
    border-radius: 42rpx;
    padding: 0 14rpx;
}

.live-player__profile-card.live-player__profile-card_without-btn {
    padding-right: 48rpx;
}

.live-player__profile-card__inner {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    min-height: 84rpx;
}

.live-player__profile-card__avatar {
    display: block;
    width: 52rpx;
    height: 52rpx;
    flex-shrink: 0;
    box-sizing: border-box;
    border: 2rpx solid rgba(255,255,255,0.70);
    border-radius: 50%;
    margin-right: 16rpx;
}

.live-player__profile-card__title {
    font-size: 28rpx;
    color: #fff;
    max-width: 7em;
    overflow: hidden;
    font-weight: 450;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.button__share {
    margin-left: 40rpx;
    position: relative;
    top: 2rpx;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 62rpx;
    height: 62rpx;
    line-height: 64rpx;
    padding: 0;
    min-width: 64rpx;
    max-width: 64rpx;
    text-align: center;
    border-radius: 50%;
    box-sizing: border-box;
    background: rgba(0,0,0,0.25);
    color: #fff;
}

.live-player-room__body {
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
    position: fixed;
    z-index: 2;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    transform: translateY(120%);
    transition: all 0.3s;
}

.live-player-room__body.active {
    transform: translateY(0%);
}

.store-list {
    border-radius: 32rpx;
    overflow: hidden;
    position: relative;
    margin-bottom: 48rpx;
}

.store__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.store-list__inner {
    position: relative;
    z-index: 5002;
    padding: 32rpx 24rpx;
}

.mode-filter-black {
    background-color: rgba(0,0,0,0.25);
    backdrop-filter: blur(40rpx);
    border-radius: inherit;
}

.store-list__header {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 8rpx;
    font-weight: 500;
}

.store-list__close {
    position: absolute;
    top: 0;
    left: 4rpx;
    width: 60rpx;
    height: 60rpx;
    color: #fff;
    text-align: center;
    line-height: 40rpx;
}

.store-list__title {
    font-size: 30rpx;
    color: #fff;
    text-shadow: 1rpx 1rpx 4rpx rgba(0,0,0,0.1);
}

.store-list__body {
    margin-top: 24rpx;
    overflow: hidden;
}

.store-list__body__inner {
    position: relative;
    max-height: 650rpx;
    overflow-y: auto;
    width: calc(100% + 40rpx);
    box-sizing: border-box;
    mask-image: gradient(linear,left bottom,left 96%,from(rgba(0,0,0,0)),to(rgba(0,0,0,04)));
}

.store-list__item {
    margin-right: 40rpx;
    margin-bottom: 24rpx;
    background: #fff;
    border-radius: 16rpx;
}

.store-list__item__inner {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 16rpx;
}

.store-list__item__header {
    position: relative;
    margin-right: 26rpx;
    font-size: 0;
}

.store-list__item__avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 4rpx;
    box-sizing: border-box;
}

.store-list__item__index {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    border-radius: 4rpx 0px 16rpx 0px;
    text-align: center;
    padding: 0 4rpx;
    min-width: 28rpx;
    line-height: 24rpx;
    font-size: 20rpx;
    color: #fff;
}

.store-list__item__body {
    padding: 4rpx 0 0;
    height: 134rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.store-list__item__title {
    font-size: 30rpx;
    color: rgba(0,0,0,0.7);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.store-list__item__price {
    opacity: 0.9;
    font-size: 28rpx;
    color: #fa9d3b;
}

.tools {
    position: fixed;
    z-index: 2;
    right: 32rpx;
    bottom: 80rpx;
}

.tools view {
    border-radius: 50%;
    box-sizing: border-box;
    background: rgba(0,0,0,0.25);
    margin-bottom: 32rpx;
    width: 88rpx;
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
    color: #fff;
    font-size: 50rpx;
}

.tools .icon-shoplist {
    background: linear-gradient(180deg,#8385F3 0%,#6467F0 100%);
}

.video-list {
    border-radius: 32rpx;
    margin: 48rpx 0;
    padding: 24rpx;
    background-color: rgba(0,0,0,0.25);
    min-height: 260rpx;
}

.list-item {
    display: inline-block;
    padding: 0 24rpx;
    background: #fff;
    line-height: 64rpx;
    color: #666;
    border-radius: 32rpx;
    margin: 24rpx 8rpx 0;
}

.list-item.active {
    color: #fff;
    background: #1890FF;
}

.icon-share3 {
    font-size: 32rpx;
}