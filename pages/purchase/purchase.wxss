.purchase .masterproduct {
    padding: 30rpx 24rpx 20rpx;
    border-bottom: 1rpx solid #ebebeb;
    height: auto;
    overflow: hidden;
}

.purchase .masterproduct image {
    width: 140rpx;
    height: 140rpx;
    float: left;
    margin-right: 20rpx;
}

.purchase .masterproduct .productname {
    float: left;
    width: 420rpx;
}

.purchase .masterproduct .productname .name {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    color: #616161;
}

.purchase .masterproduct .productname .sku {
    display: inline-block;
    border: 1rpx solid #a9a9a9;
    padding: 5rpx 20rpx;
    border-radius: 5rpx;
    margin-top: 5rpx;
    font-size: 28rpx;
}

.purchase .masterproduct .productname .sku1 {
    color: #ff5722;
    margin-top: 10rpx;
    font-size: 28rpx;
    width: 460rpx;
    height: auto;
    overflow: hidden;
}

.purchase .masterproduct .productname .sku1 view {
    float: left;
}

.purchase .masterproduct .productname .sku1 .guige1 {
    width: 330rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.purchase .masterproduct .productname .sku1 .iconfont {
    float: left;
}

.purchase .masterproduct .productname .iconfont {
    font-size: 30rpx;
}

.purchase .masterproduct .pirce {
    float: right;
}

.productlist {
    padding: 30rpx 24rpx 20rpx;
    height: auto;
    overflow: hidden;
}

.productlist .icon {
    float: left;
    margin-top: 90rpx;
}

.productlist .masterproduct {
    width: 600rpx;
    padding: 30rpx 0 20rpx;
    float: right;
}

.productlist .masterproduct .productname {
    width: 320rpx;
}

.productlist .masterproduct .productname .sku1 .guige1 {
    width: 220rpx;
}

.amount {
    display: flex;
    justify-content: space-between;
    padding: 50rpx 24rpx 20rpx;
    color: #333;
    background: #f3f3f3;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 110rpx;
}

.amount text {
    color: #ff5722;
    font-weight: bold;
}

.submit {
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    background: #fff;
}

.submit .box {
    padding: 18rpx 24rpx;
    align-items: center;
    justify-content: space-between;
    display: flex;
}

.submit .buy {
    font-size: 32rpx;
    display: flex;
}

.submit .shpcart-item {
    display: flex;
    align-items: center;
    width: 200rpx;
    margin-left: 20rpx;
}

.submit .shopcart .shpcart-item .iconfont {
    font-size: 30rpx;
}

.submit .shpcart-item input {
    border: 1rpx solid #d7d7d7;
    margin: 0 20rpx;
    text-align: center;
}

.submit .box .sub {
    width: 180rpx;
    height: 80rpx;
    border-radius: 15rpx;
    text-align: center;
    line-height: 80rpx;
    background: #ff5722;
    color: #fff;
    font-size: 32rpx;
}

.skuchoose {
