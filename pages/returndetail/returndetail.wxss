page {
    background: #f5f5f5;
    color: #212121;
}

.font-arial {
    font-family: Arial;
}

.returndetail-con {
    overflow: hidden;
    font-size: 32rpx;
}

.item {
    overflow: hidden;
    font-size: 28rpx;
}

.item .hd {
    line-height: 40rpx;
    background: #fff;
    overflow: hidden;
    padding: 24rpx 24rpx 0;
}

.item .hd .num {
    float: left;
}

.item .hd .state {
    float: right;
    color: #ff5722;
}

.item .bd {
    background: #fff;
    padding: 0 24rpx 32rpx;
    overflow: hidden;
    border-radius: 0 0 16rpx 16rpx;
}

.item .bd .comm {
    overflow: hidden;
    padding-top: 32rpx;
}

.item .bd .pic {
    float: left;
    width: 128rpx;
    margin-right: 16rpx;
}

.item .bd .pic image {
    width: 128rpx;
    height: 128rpx;
}

.li2 {
    height: 200rpx;
    width: 200rpx;
    float: left;
    margin: 24rpx 24rpx 8rpx 0;
}

.li2 image {
    width: 100%;
    height: 100%;
}

.item .bd .info {
    float: left;
    width: 400rpx;
    margin-right: 18rpx;
}

.item .bd .info .name {
    height: 64rpx;
    font-size: 24rpx;
    line-height: 32rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.item .bd .info .para {
    margin-top: 8rpx;
    line-height: 32rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #747474;
    font-size: 24rpx;
}

.item .bd .price {
    float: right;
    height: 70rpx;
    line-height: 32rpx;
    overflow: hidden;
    text-align: right;
    font-size: 24rpx;
}

.item .fd {
    background: #fff;
    padding: 0 24rpx 32rpx;
    overflow: hidden;
    line-height: 48rpx;
    font-size: 28rpx;
    margin-top: 24rpx;
    border-radius: 16rpx;
}

.item .fd .li {
    padding-top: 32rpx;
    overflow: hidden;
    font-size: 28rpx;
    line-height: 40rpx;
}

.item .fd .li .title,.customer .title {
    float: left;
    width: 180rpx;
    overflow: hidden;
}

.item .fd .li .con {
    float: right;
    overflow: hidden;
    text-align: right;
}

.customer .con {
    float: right;
    overflow: hidden;
    text-align: right;
    color: #bdbdbd;
}

.customer .icon-more text {
    width: 30rpx;
    height: 19rpx;
    margin-top: 10rpx;
    float: right;
}

.customer {
    overflow: hidden;
    padding-top: 32rpx;
}

.schedule {
    padding: 24rpx 0rpx 0rpx 0rpx;
}

.rotate {
    transform: rotate(180deg);
}

.schedule .dl .dd {
    border-left: 1rpx solid #eee;
    margin-left: 8rpx;
}

.schedule .dl .dd:last-child,.schedule .dl .dd:last-child.active {
    border-left: 0rpx solid #fff;
}

.schedule .dl .dd .line {
    height: 0rpx;
    overflow: hidden;
    clear: both;
}

.schedule .dl .dd .lis {
    margin-left: -12rpx;
}

.schedule .dl .dd .icon {
    background: rgba(0,0,0,0);
    height: 24rpx;
    width: 24rpx;
    border-radius: 100%;
    overflow: hidden;
    float: left;
    margin-right: 16rpx;
    line-height: 40rpx;
}

.schedule .dl .dd .icon view {
    background: #bdbdbd;
    height: 16rpx;
    width: 16rpx;
    border-radius: 100%;
    overflow: hidden;
    margin: 0 auto;
    margin-top: 4rpx;
}

.schedule .dl .dd .exp {
    float: left;
    width: 638rpx;
    overflow: hidden;
    line-height: 40rpx;
    margin-top: -8rpx;
    padding-bottom: 24rpx;
    margin-bottom: 24rpx;
}

.schedule .dl .dd .exp .name {
    font-size: 28rpx;
    color: #747474;
    line-height: 40rpx;
    margin-bottom: 8rpx;
}

.schedule .dl .dd .exp .time {
    font-size: 24rpx;
    color: #bdbdbd;
    line-height: 32rpx;
}

.schedule .dl .dd.active .icon {
    color: #1890ff;
    font-size: 24rpx;
    top: -6rpx;
    position: relative;
    height: auto;
}

.schedule .dl .dd.active .icon view {
    background: transparent;
}

.schedule .dl .dd.active .exp .name {
    color: #212121;
}

.comment-btn {
    padding: 48rpx 24rpx 24rpx 24rpx;
}

.comment-btn button {
    height: 88rpx;
    line-height: 88rpx;
    margin-bottom: 24rpx;
    font-size: 36rpx;
}

.comment-btn button::after {
    border: 0;
}

button.btn-confirm {
    background: #ff4820;
    color: #fff;
}

button.btn-confirm:hover {
    background: #ff1f00;
}