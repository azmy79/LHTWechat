.marketimg image {
    width: 100%;
    height: 320rpx;
}

.product {
    overflow: hidden;
    padding-right: 0 24rpx;
}

.prodcut-list {
    position: relative;
    padding: 24rpx 16rpx;
}

.prodcut-list .product-info {
    width: 50%;
    padding: 0 8rpx;
    margin-bottom: 24rpx;
    float: left;
    box-sizing: border-box;
}

.product-info .product-pic {
    width: 100%;
    height: 343rpx;
}

.product-info .product-pic image {
    width: 100%;
    height: 100%;
}

.product-info .product-des {
}

.product-info .product-des .product-name {
    color: #424242;
    line-height: 40rpx;
    height: 80rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-top: 16rpx;
}

.product-info .product-price view {
    float: left;
    color: #212121;
    text-decoration: none;
    line-height: 48rpx;
    font-size: 26rpx;
}

.product-info .product-price text {
    font-weight: bold;
    font-size: 32rpx;
}

.search-pro-shop {
    float: right;
    position: relative;
}

.search-pro-shop .iconfont {
    font-size: 44rpx;
    color: #ff5722;
    line-height: 44rpx;
}

.search-pro-shop .buy-num {
    width: 140rpx;
    position: relative;
    padding: 0 44rpx;
    text-align: center;
    line-height: 44rpx;
    height: 44rpx;
    color: #212121;
    background: #fff;
    font-size: 32rpx;
    box-sizing: border-box;
}

.search-pro-shop .buy-num .iconfont {
    position: absolute;
    top: 0;
}

.search-pro-shop .buy-num .icon-minus {
    left: 0;
}

.search-pro-shop .buy-num .icon-plus {
    right: 0;
}

.search-pro-shop .iconfont .num {
    min-width: 28rpx;
    padding: 0 8rpx;
    line-height: 28rpx;
    text-align: center;
    border-radius: 28rpx;
    background: #fff;
    font-size: 20rpx;
    position: absolute;
    right: -12rpx;
    top: -12rpx;
    color: #ff221a;
    border: 1rpx solid #ff221a;
    box-sizing: border-box;
}

.product-shop .product-add {
    text-align: center;
    position: relative;
    color: #ffa000;
}

.product-buy-home {
    overflow: hidden;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
}

.product-buy-home .l,.product-buy-home .r {
    width: 24rpx;
    float: left;
    color: #ffa000;
    height: 100%;
}

.product-buy-home .iconfont {
    display: block;
}

.product-buy-home .m {
    width: 95rpx;
    text-align: center;
    line-height: 46rpx;
    font-size: 32rpx;
    float: left;
    color: black;
}

.product-shop .product-add .coust {
    position: absolute;
    top: -10rpx;
    right: -8rpx;
    background: #ff5252;
    color: #fff;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 100%;
    font-size: 20rpx;
    z-index: 5;
}

.store-active {
    position: relative;
    color: #747474;
    background-color: #fff;
}

.store-active .activename:nth-child(n+2) {
    display: none;
}

.select .activename:nth-child(n+2) {
    display: block;
}

.store-active-num {
    position: absolute;
    right: 24rpx;
    top: 24rpx;
}

.badge_jian_ {
    color: #ff5252;
}

.badge_song_ {
    color: #ff9800;
}

.badge_mian_ {
    color: #ffc107;
}

.icon-3 {
    top: 3rpx;
}

.icon-1 {
    top: 6rpx;
}

.ic-buy {
    width: 42rpx;
    height: 42rpx;
    background: #ffa000;
    color: #fff;
    font-size: 24rpx;
    border-radius: 50%;
    line-height: 40rpx;
    text-align: center;
}

.cart-px {
    font-size: 24rpx;
}